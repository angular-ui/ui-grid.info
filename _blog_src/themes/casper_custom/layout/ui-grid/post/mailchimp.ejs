<% mailchimp_title = page.mailchimp_title || 'Enter your email address to sign up:' %>

<div id="mc_embed_signup" class="mailchimp-form-container clearfix">
  <form class="form-inline mailchimp-form col-lg-4 col-md-4" action="//ui-grid.us8.list-manage.com/subscribe/post?u=cd04613434129cb711cd99965&amp;id=969c1199dd" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
    <div id="mc_embed_signup_scroll">
      <label for="mce-EMAIL"><%= mailchimp_title %></label>
      <br>
      <input type="text" value="" name="EMAIL" class="form-control" id="mce-EMAIL" placeholder="Email address" required>
      <input type="hidden" value="<%= page.mailchimp_tag %>" name="SIGNUP" id="SIGNUP">
      <input type="hidden" value="<%= page.autorespond_subj %>" name="AUTORESPOND_SUBJECT" id="AUTORESPOND_SUBJECT">
      <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
      <div style="position: absolute; left: -5000px;"><input type="text" name="b_cd04613434129cb711cd99965_969c1199dd" tabindex="-1" value=""></div>
      <br>
      <br>
      <div class="clear"><input type="submit" class="btn btn-success" value="Subscribe" name="subscribe" id="mc-embedded-subscribe"></div>
    </div>
  </form>
</div>
<!--End mc_embed_signup-->